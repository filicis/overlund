{% extends 'base.html.twig' %}

{#
    Definerer standard layout for vores gedcom editor
    - Venstre kolonne som defaulter til en INDI structur
    - Højre kolonne defaulter til en FAM structur

    - Flere følger senere
#}

{% block title %}Editor{% endblock %}

{% block body %}


{{ form_start(form) }}


<div class="row">

    {% block toprow %}
    {% endblock toprow %}

</div>

<div class="row">


  <div class="col">
    {% block lcol %}
    	{{ include('editor/individual.html.twig') }}
    {% endblock lcol %}
  </div>

  <div class="col">
    {% block rcol %}
  		{{ include('editor/family.html.twig') }}
    {% endblock rcol %}
  </div> <!-- End col -->


</div> <!-- End row -->

<div class="modal" id="exampleModal" tabindex="-1 aria-labelledby="exampleModalLabel" aria-hidden="true">

  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

  <iframe name="iframetest"></iframe>
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>


</div>

   {{ form_widget(form) }}

  {{ form_end(form) }}



{% endblock body %}


{% block javascripts %}
  {{ parent() }}
{% endblock javascripts%}
