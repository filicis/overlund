{#

  templates/editor/family-husband.html.twig

  Expects the template variable: husb

#}

{% set husb = fam ? fam.getHusb() %}

{% if husb %}
  {% set phusb = '\ludvig.jpg' %}
  {% set nhusb = 'Anders Hansen Nielsen' %}
  {% set synlig = 'visible' %}
{% else %}
  {% set phusb = '\ludvig.jpg' %}
  {% set nhusb = 'Anders Hansen Nielsen' %}
  {% set synlig = 'visible' %}
{% endif %}

{% set btnclass = 'btn btn-outline-dark btn-light btn-sm' %}

<div class="row" data-action="editor#selectHusband">
  {# Billede
    nu implmenteret med HTML pucture tag
  #}

  <picture class="col-1 d-flex align-items-center p-1">
    <source srcset="\{{ phusb }}" />

    <img src="\male-employee-icon.svg" class="img-fluid" alt="..." />
  </picture>

  {# Navn
  #}

  <div class="col" data-action="click->editor#selectIndividual" data-editor-id-param="01GFNKMRXET382QPZSTTF8QF4B">
    <div class="dm-2">
      <label class="small" for="idHusband">{{ 'Husband'|trans }}:</label>
      <input type="text" data-editor-target="tommy" class="form-control form-control-sm shadow-lg" id="idHusband" placeholder="Tekst" value="{{ nhusb }}" readonly />
    </div>
  </div>

  {# Reserveret til knap-apparat #}

  <div class="col-3 text-end">
    <button type="button" class="{{ app_btn_class_sm }}" data-action="editor#newAsHusband" data-bs-toggle="tooltip" title="{{ 'New Individual as Husband'|trans }}">{{ icon_male|raw }}</button>

    <button type="button" class="{{ app_btn_class_sm }}" data-action="editor#linkAsHusband" data-bs-toggle="tooltip" title="{{ 'Link current Individual as Husband'|trans }}">{{ icon_link }}</button>

    <button type="button" class="{{ app_btn_class_sm }}" data-action="editor#unlinkHusband" data-bs-toggle="tooltip" title="{{ 'Remove as Husband'|trans }}">{{ icon_remove }}</button>

    <button type="button" class="{{ app_btn_class_sm }}" data-action="editor#searchForHusband" data-bs-toggle="tooltip" title="{{ 'Search for Husband'|trans }}">{{ icon_search_l }}</button>

    <button type="button" class="{{ app_btn_class_sm }}" data-action="editor#notesForHusband" data-bs-toggle="tooltip" title="{{ 'Notes for Husband'|trans }}">{{ icon_notes }}</button>
  </div>
</div>
