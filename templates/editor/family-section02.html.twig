
{# templates/editor/family.html.twig #}

{#

#}

{% set childlist= ["Maren Jensdatter Harboe Bols (1778-1843)",
									"Christen Jensen Harboe (1780-1827)",
									"Anne Jensdatter (1784)",
									"Kirsten Jensdatter Harboe (1786)",
									"Laurits Jensen Harboe (1791)",
									"Bodil Jensdatter Harboe (1796)",
									"Christen Jensen Harboe (1780-1827)",
									] %}


<div class="card-body">

  <div class="row">
    <div class="col">
      <label for="XXXXXXX">{{ 'Children' | trans }}:</label>

    </div>
  </div>
  <div class="row">
    <div class="col-9">

      <select class="form-select" id="XXXXXXX" size=10 aria-label="Default select example">
        <!-- option selected>Open this select menu</option- -->

        {% for ch in childlist %}

        <option value="1" onfocus='showIndividual()'>{{ ch }}</option>

        {% endfor %}
      </select>

    </div>

    {# Reserveret til knap-apparat #}

    <div class="col-3">
      <button type="button"
        class="btn btn-sm btn-outline-dark"
        data-action="editor#newChild"
        data-bs-toggle="tooltip"
        title="{{'New Individual as Child' | trans}}">

        <i class="bi bi-person-fill"></i>
      </button>

      <button type="button"
        class="btn btn-sm btn-outline-dark"
        data-action="editor#linkChild"
        data-bs-toggle="tooltip"
        title="{{'Link current Individual as Child' | trans}}">
        <i class="bi bi-link"></i>
      </button>

      <button type="button"
        class="btn btn-sm btn-outline-dark"
        data-action="editor#unlinkChild"
        data-bs-toggle="tooltip"
        title="{{'Remove as Child' | trans}}">
        <i class="bi bi-person-fill"></i>
      </button>

      <button type="button" class="btn btn-sm btn-outline-dark"
        data-bs-toggle="tooltip"
        title="{{'Search for Child' | trans}}">
        <i class="bi bi-search"></i>
      </button>

      <button type="button" class="btn btn-sm btn-outline-dark"
        data-bs-toggle="tooltip"
        title="{{'Notes for Child' | trans}}">
        <i class="bi bi-chat-left-text-fill"></i>
      </button>

    </div>


  </div>
</div>


<div class="card-body d-flex justify-content-between">
  <!-- div class="row" -->

  <!-- div class="col" -->

  <button type="button" class="btn btn-sm btn-outline-dark" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Events and Attributes">
    <i class="bi bi-file-spreadsheet"></i>
  </button>
  <a role="button" href="noteeditor" class="btn btn-sm  btn-outline-dark" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Notes">
    <i class="bi bi-file-text"></i>
  </a>
  <button type="button" class="btn btn-sm  btn-outline-dark" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Source Citations">
    <i class="bi bi-file-post"></i>
  </button>
  <button type="button" class="btn btn-sm btn-outline-dark" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Media">
    <i class="bi bi-file-image"></i>
  </button>
  <button type="button" class="btn btn-sm btn-outline-dark" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Last Change / Restrictions">
    <i class="bi bi-file-lock"></i>
  </button>
  <button type="button" class="btn btn-sm btn-outline-dark" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Researchers">
    <i class="bi bi-file-person"></i>
  </button>
  <!-- /div>
  </div -->
</div>

