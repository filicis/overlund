<div class="modal fade" id="mlrModalEvent" tabindex="-1 aria-labelledby="exampleModalLabel" aria-hidden="true">

  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">

      {# Modal Header#}

      <div class="modal-header">
        <h5 class="modal-title">Edit Event/Attribute for [I346] Olga Jensen</h5>

          {# Restrictions #}

          <div class="col text-end"
            _data-action="change->editor#famRestrictions"
            >

            <span class="mb-2"
              data-bs-toggle="tooltip"
              title="{{ 'Write protection' | trans }}"
              aria-label="{{ 'Write protection' | trans }}">
              <input type="checkbox"
              class="btn-check"
              name= "__locked"
              id="btn-check1_"
              autocomplete="off">
              <label class="btn btn-outline-dark btn-light btn-sm"
                for="btn-check1_">
                {{ icon_unlocked | raw }}
              </label>
            </span>
            <span class=""
              data-bs-toggle="tooltip"
              title= "{{ 'Confidential' | trans }}">
              <input type="checkbox"
              class="btn-check"
              name= "__Confidential"
              id="btn-check2_"
              autocomplete="off">
              <label class="btn btn-outline-dark btn-light btn-sm"
                for="btn-check2_">
                {{ constant('App\\Controller\\EditorController::ICON_CONFIDENTIAL') }}
              </label>
            </span>
            <span class=""
              data-bs-toggle="tooltip"
              title="{{ 'Privacy' | trans }}">
              <input type="checkbox"
              class="btn-check"
              name= "__Privacy"
              id="btn-check3_"
              autocomplete="off">
              <label class="btn btn-outline-dark btn-light btn-sm"
                for="btn-check3_">
                {{ constant('App\\Controller\\EditorController::ICON_PRIVATE') }}
              </label>
            </span>

          </div>

        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      {# Modal Body#}

      <div class="modal-body">
        <div class="container-fluid">
          <div class="row">

            {# GEDCOM Navne Struktur #}

            <div id="NameStr"
              class="col-10"
              _data-action= "input->editor#updatePersonalNameStructure"
              data-editor-url-param="{{ url('api_individual_updatePersonalName', {url: 'Project01'} ) }}"
              data-editor-name-id-param= {{ nam ? nam.id : ''
              }}>

              {# Tag #}

              <div class="mb-2 shadow">
                <label class= "small" for="idEventTag"> {{ 'Tag' | trans }}: </label>
                <select class="form-select form-select-sm" id="EventTag" aria-label=".form-select-sm example">
                  <option selected>Open this select menu</option>

                  {% for p in taglist %}

                  <option value="{{ p }}">{{ p | trans }}</option>

                  {% endfor %}

                </select>
              </div>

              {# Descriptiom - Kun defineret for Attributter med Payload #}

              <div class="mb-2 sshadow">
                <label class= "small" for="idYYY0"> {{ 'Description' | trans }}: </label>
                <input type="text"
                class="form-control form-control-sm shadow"
                id="idYYY0"
                name= 'npfxxxxx'
                // value="{{ nam ? nam.npfx }}" >
              </div>

              {# Type - valgfri for de fleste tags, obligatorisk for nogle f√• #}

              <div class="mb-2 sshadow">
                <label class= "small" for="idYYY0"> {{ 'Type' | trans }}: </label>
                <input type="text"
                class="form-control form-control-sm shadow"
                id="idYYY0"
                name= 'npfxxx'
                // value="{{ nam ? nam.npfx }}" >
              </div>


              <div class="mb-2 sshadow">
                <label class= "small" for="idYYY0"> {{ 'Date' | trans }}: </label>
                <input type="text"
                class="form-control form-control-sm shadow"
                id="idYYY0"
                name= 'npfxxx'
                // value="{{ nam ? nam.npfx }}" >
              </div>

              <div class="mb-2 sshadow">
                <label class= "small" for="idYYY0"> {{ 'Address' | trans }}: </label>
                <input type="text"
                class="form-control form-control-sm shadow"
                id="idYYY0"
                name= 'npfxxx'
                // value="{{ nam ? nam.npfx }}" >
              </div>


              <div class="mb-2 sshadow">
                <label class= "small" for="idYYY0"> {{ 'Place' | trans }}: </label>
                <input type="text"
                class="form-control form-control-sm shadow"
                id="idYYY0"
                name= 'npfxxx'
                // value="{{ nam ? nam.npfx }}" >
              </div>


              <div class="mb-2 sshadow">
                <label class= "small" for="idYYY0"> {{ 'Cause' | trans }}: </label>
                <input type="text"
                class="form-control form-control-sm shadow"
                id="idYYY0"
                name= 'npfxxx'
                // value="{{ nam ? nam.npfx }}" >
              </div>


              <div class="mb-2 sshadow">
                <label class= "small" for="idYYY0"> {{ 'Agency' | trans }}: </label>
                <input type="text"
                class="form-control form-control-sm shadow"
                id="idYYY0"
                name= 'npfxxx'
                // value="{{ nam ? nam.npfx }}" >
              </div>





            </div>


            <div class="col-2 mb-2">
              <button role="button"
                class="btn btn-outline-dark btn-light btn-sm shadow w-100 mb-2"
                data-action="click->editor#notes"
                data-bs-toggle="tooltip"
                data-bs-placement="bottom"
                title="{{ 'Notes' | trans }}">
                {{ icon_notes | raw }}
              </button>
              <button type="button"
                class="btn btn-outline-dark btn-light btn-sm shadow w-100 mb-2"
                _data-action="click->editor#sourceCitations"
                data-bs-toggle="tooltip"
                data-bs-placement="bottom"
                title="{{ 'Source Citations' | trans }}">
                {{ icon_sources | raw }}
              <button type="button"
                class="btn btn-outline-dark btn-light btn-sm shadow w-100 mb-2"
                _data-action="click->editor#sourceCitations"
                data-bs-toggle="tooltip"
                data-bs-placement="bottom"
                title="{{ 'Media' | trans }}">
                {{ icon_media | raw }}
              </button>
              <button type="button"
                class="btn btn-outline-dark btn-light btn-sm shadow w-100 mb-2"
                _data-action="click->editor#sourceCitations"
                data-bs-toggle="tooltip"
                data-bs-placement="bottom"
                title="{{ 'Associates' | trans }}">
                {{ icon_association | raw }}
              </button>
              <button type="button"
                class="btn btn-outline-dark btn-light btn-sm shadow w-100 mb-2"
                _data-action="click->editor#sourceCitations"
                data-bs-toggle="tooltip"
                data-bs-placement="bottom"
                title="{{ 'Identifiers' | trans }}">
                {{ icon_media | raw }}
              </button>

            </div>


          </div>

        </div>

      </div>


      {# Modal Footer #}

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>


</div>


