{# templates/editor/individual-section02.html.twig #}

{#

    Template Variables:
    - indi
#}

  {% set nam=  indi.personalNameStructures.first %}


<div class="card-body">

	<div class="row">


			<!-- Navne Struktur -->

		<div id="NameStructure"
		     class="col-9"
		     {{ stimulus_action('editor', 'updatePersonalNameStructure', 'input') }}  >


				<!-- Fornavne -->

			<div class="row">
				<div class="col-3">
					<div class="form-floating">
						<input type="text"
						       class="form-control form-control-sm"
						       id="idYYY0"
						       placeholder="Tekst" value="{{ nam.npfx }}" >
						<label for="idYYY0"> {{ 'Prefix' | trans }} </label>
					</div>
				</div>
				<div class="col-9">
					<div class="form-floating">
						<input type="text"
						       class="form-control form-control-sm"
						       id="idXXX1"
						       placeholder="Tekst"
						       value="{{ nam.givn }}" >
						<label for="idXXX1"> {{ 'First names' | trans }}</label>
					</div>
				</div>
			</div>

				<!-- Efternavn -->

			<div class="row">
				<div class="col-3">
					<div class="form-floating">
						<input type="text"
						       class="form-control form-control-sm"
						       id="idXXX2"
						       placeholder="Tekst",
						       value="{{ nam.spfx }}" >
						<label for="idXXX2"> {{ 'Prefix' | trans }}</label>
					</div>
				</div>
				<div class="col-6">
					<div class="form-floating">
						<input type="text"
						       class="form-control form-control-sm"
						       id="idXXX3"
						       placeholder="Tekst"
						       value="{{ nam.surn }}" >
						<label for="idXXX3"> {{ 'Last names' | trans }} </label>
					</div>
				</div>
				<div class="col-3">
					<div class="form-floating">
						<input type="text"
						       class="form-control form-control-sm"
						       id="idXXX4"
						       placeholder="Tekst",
						       value="{{ nam.nsfx }}" >
						<label for="idXXX4"> {{ 'Suffix' | trans }}</label>
					</div>
				</div>
			</div>

				<!-- Diverse navnestof, etc -->

			<div class="row">
				<div class="col-3">
					<div class="form-floating">
						<!-- input type="text" class="form-control form-control-sm" id="idXXX7" placeholder="Tekst" -->

						<select class="form-select form-select-sm"
						        id="idXXXXXX7"
						        aria-label="Default select example"
						        data-bs-toggle="tooltip"
						        data-bs-placement="top"
						        title="{{ 'Indicates the sex of the individual at birth' | trans }}"
                    {{ stimulus_action('editor', 'updateSex', 'input') }}  >
							<!-- option >Køn</option -->
							<option value="M" selected> {{ 'Male' | trans }} </option>
							<option value="F"> {{ 'Female' | trans }} </option>
              <option value="X"> {{ 'Intersex' | trans }} </option>
              <option value="U"> {{ 'Unknown' | trans }} </option>
						</select>
						<label class="form-label-sm" for="idXXX7"> {{ 'Sex' | trans }} </label>
					</div>

				</div>
				<div class="col">
					<div class="form-floating">
						<input type="text"
						       class="form-control form-control-sm"
						       id="idXXX6"
						       placeholder="Tekst",
						       value="{{ nam.nick }}" >
						<label for="idXXX6"> {{ 'Nicknames' | trans }} </label>
					</div>
				</div>
				<!-- div class="col-3">
					<div class="form-floating">
						<input type="text" class="form-control form-control-sm" id="idXXX5" list="idXXXXX5" placeholder="Tekst" >
						<label for="idXXX5"> {{ 'Type' | trans }} </label>
						<datalist id="idXXXXX5">
						  <option value="AKA">Alias</option>
						  <option value="BIRTH">FÃ¸dsel</option>
						  <option value="IMMIGRANT">Immigrant</option>
						  <option value="MAIDEN">Pigenavn</option>
						  <option value="MARRIED">Giftenavn</option>
						  <option value="PROFESSIONAL">Pseudonym</option>

						</datalist>
					</div>
				</div-->

			</div>
		</div>

    {#
		    Billede af dette individ

    #}

		<div class="col d-flex align-items-center">
			<!-- img src="\ludvig.jpg" class="img-fluid" alt="..." -->

      <svg xmlns="http://www.w3.org/2000/svg"
           width="100%"
           hheight="16"
           fill="currentColor"
           class="bi bi-person-fill"
           viewBox="0 0 16 16">
          <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
      </svg>

    </div>


	</div>
</div>
