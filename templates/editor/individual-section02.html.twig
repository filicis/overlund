

{# templates/editor/individual-section02.html.twig #}

{#

#}

{% set familylist= ["Ludvig Rasmussen + Karen Marie Jensen (1919)",
									"Ludvig Rasmussen + Marie Elivira Bolette Andersen (1950)",
									"Anne Jensdatter (1784)",
									"Kirsten Jensdatter Harboe (1786)",
									"Laurits Jensen Harboe (1791)",
									"Bodil Jensdatter Harboe (1796)",
									"Christen Jensen Harboe (1780-1827)",
									] %}

{% set parentlist= ["Peter Rasmussen og Cecilie Kristiane Larsen (1885)"
									] %}


<div class="card-body">

  <div class="row">
    <div class="col-9">

      <label class="small" for="XXX"> {{ 'Families' | trans }}:</label>
      <select class="form-select form-select-sm shadow" id="XXX" size=3 aria-label="Default select example">

        <!-- option selected>Open this select menu</option- -->

        {% for f in familylist %}

        <option value="1" onfocus='kilroy()'>{{ f }}</option>

        {% endfor %}
      </select>
    </div>

    {# Reserveret til knap-apparat #}

    <div class="col-3 d-flex align-items-center">
      <div class="text-end">

        <button type="button"
          class= "{{ app_btn_class_sm }}"
          data-bs-toggle="tooltip"
          title="{{'Change Pedigree of Child' | trans}}">
          {{ icon_up }}

        </button>

        <button type="button"
          class= "{{ app_btn_class_sm }}"
          data-bs-toggle="tooltip"
          title="{{'Change Pedigree of Child' | trans}}">
          {{ icon_down }}
        </button>
      </div>
    </div>
  </div>
</div>

<div class=card-body>
  <div class="row">
    <div class="col-9">

      <label class="small" for="XXX"> {{ 'Parents' | trans }} :</label>
      <select class="form-select form-select-sm shadow" id="XXX" size=2 aria-label="Default select example">
        <!-- option selected>Open this select menu</option- -->

        {% for p in parentlist %}

        <option value="1"  onfocus='kilroy()'>{{ p }}</option>

        {% endfor %}
      </select>
    </div>
    <div class="col-3 d-flex align-items-center">
      <div class="text-end">

        <button type="button" disabled
          class="{{ app_btn_class_sm }}"
          data-bs-toggle="tooltip"
          title="{{'Change Pedigree of Child' | trans}}">
          {{ icon_up }}

        </button>

        <button type="button" disabled
          class="{{ app_btn_class_sm }}"
          data-bs-toggle="tooltip"
          title="{{'Change Pedigree of Child' | trans}}">
          {{ icon_down }}
        </button>

      </div>
    </div>
  </div>
</div>



<div class="card-body d-flex justify-content-between">
  <button type="button"
    class= "{{ app_btn_class }}"
    data-action="click->editor#individualEvents"
    data-bs-toggle="tooltip"
    data-bs-placement="bottom"
    title="{% trans %} Events and Attributes {% endtrans %}">
    {{ icon_events }}
  </button>
  <button role="button"
    class= "{{ app_btn_class }}"
    data-action="click->editor#notes"
    data-bs-toggle="tooltip"
    data-bs-placement="bottom"
    title="{{ 'Notes' | trans }}">
    {{ icon_notes }}

  </button>
  <button type="button"
    class= "{{ app_btn_class }}"
    data-action="click->editor#sourceCitations"
    data-bs-toggle="tooltip"
    data-bs-placement="bottom"
    title="{{ 'Source Citations' | trans }}">
    {{ icon_sources }}
  </button>
  <button type="button"
    class= "{{ app_btn_class }}"
    data-action="click->editor#mediaFiles"
    data-bs-toggle="tooltip"
    data-bs-placement="bottom"
    title="{{ 'Media' | trans }}">
    {{ icon_media }}
  </button>
  <button type="button"
    class= "{{ app_btn_class }}"
    data-bs-toggle="tooltip"
    data-bs-placement="bottom"
    title="Last Change / Restrictions">
    {{ icon_private }}
  </button>
  <button type="button"
    class= "{{ app_btn_class }}"
    data-bs-toggle="modal"
    data-bs-target="#mlrModal"
    data-bs-placement="bottom"
    title="{{ 'Researchers' | trans }}">
    {{ icon_researchers }}
  </button>
</div>


