{%
	set iEvent= [
			[ 'Birth',  '25 August 1893',  'Svinninge',],
			[ 'Christening',  '24 September 1893',  'Nørre Asmindrup',],
			[ 'Residense',  '1896',  'Nykøbing Sjælland',],
			[ 'Census',  '1901',  'Algade 21',],
			[ 'Census',  '1906',  'Algade 21',],
			[ 'Census',  '1911',  'Algade 31',],
			[ 'Occupation',  '',  ''],
			[ 'Death',  '8 September 1974',  'Nykøbing Sjælland',],
			[ 'Burrial',  '13 September 1974',  'Assistens Kirkegaard',],
	]
%}



<div class="card-body">

  <div class="table-responsive  _overflow-auto shadow" style="max-height: 250px">

    <table class="table table-hover table-bordered table-sm table-light" {{ indi ? '' : 'Disabled'}}>

      <thead class="small" style="position: sticky; top: 0">
        <tr>
          <th scope="col">{{'Event' | trans}}</th>
          <th scope="col">{{'Date' | trans}}</th>
          <th scope="col">{{'Place' | trans}}</th>
        </tr>
      </thead>
      <tbody class="small" _data-action="click->editor#dummy">

        {% for e in iEvent %}

        <tr tabindex="0" data-action="focus->editor#dummy" >
          <td>{{ e[0] }}</td>
          <td>{{ e[1] }}</td>
          <td>{{ e[2] }}</td>
        </tr>

        {% endfor %}

      </tbody>
    </table>
  </div>
</div>

