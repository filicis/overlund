{# templates/editor/individual.html.twig #}

{#
    Individual Frame

    The Individual Frame shows the name of the currently selected individual,
    the parental and spousal families associated with the individual,
    and a number of data entry and control buttons

    Template Variables:
    - indi
#}



<div id="sammy"
     class="card border-dark text-dark bg-gradient h-100 shadow-lg p-3 mb-5  rounded"
     style="background-color: #DBFFFE"
     {{ stimulus_target('editor', 'indicard') }}>
	<div class="row card-header border-dark">
    {% if indi %}
	  <div class="col-8 text-nowrap overflow-hidden">
	    <span>[{{ indi.xref }}]</span>
	    <span {{ stimulus_target('editor', 'personalName') }}
	          title="{{ indi.id }}"
	      >
	      {{ indi.personalNameStructures.first.personalName }}
	      </span>
		</div>
		{% else %}
		  {{ title }}
		{% endif %}

      {# RESN knap apparat #}

		<fieldset class="col text-end"
		     aria-label="Restriction">
		  <span class=""
            data-bs-toggle="tooltip"
            title="{{ 'Write protection' | trans }}"
            aria-label="{{ 'Write protection' | trans }}"
		    >
		    <input type= "checkbox"
		           class= "btn-check"
               name= "locked"
		           id="btn-check11"
		           autocomplete="off"
		           value="LOCKED">
			  <label class="mlr btn btn-outline-dark btn-light btn-sm" for="btn-check11">&#x1F513;</label>
		  </span>
      <span class=""
            data-bs-toggle="tooltip"
            title= "{{ 'Confidential' | trans }}">
        <input type="checkbox"
               class="btn-check"
               name= "confidential"
               id="btn-check12"
               autocomplete="off">
			  <label class="btn btn-outline-dark btn-light btn-sm" for="btn-check12">ü§ê</label>
		  </span>
      <span class=""
            data-bs-toggle="tooltip"
            title="{{ 'Privacy' | trans }}">
        <input type="checkbox"
               class="btn-check"
               name= "privacy"
               id="btn-check13"
               autocomplete="off">
			  <label class="btn btn-outline-dark btn-light btn-sm" for="btn-check13">‚õî</label>
    </fieldset>
	</div>


		{{ include('editor/individual-section01.html.twig') }}

		{{ include('editor/individual-section02.html.twig') }}

		{{ include('editor/individual-section03.html.twig') }}


    <div class="card-footer border-dark d-flex justify-content-between">
            {{ include('editor/buttonline-left.html.twig') }}

    </div>



</div>

