{# editor/modal/repository1.html.twig #}

{% set content %}


<div class="container-fluid">
	<div
		class="card alert-warning shadow">

		{# card Header #}

		<div class="card-header">
			{{ 'New Repository' | trans }}
		</div>

		{# Card Body #}

		<div class="card-body">
			<div class="row">
				<div class="col-10">

					<div
						class="row">

						{# Descriptiom - Kun defineret for Attributter med Payload #}

						<div class="col-12 mb-2">
							<label class="small shadow" for="idYYY0">
								{{ 'Name' | trans }}:
							</label>
							<input type="text" class="form-control form-control-sm shadow" id="idYYY0" name='name' ">
						</div>


						<div class="col-12 mb-2">
							<label class="small shadow" for="_addr">{{ 'Address' | trans }}:</label>
							<div class="input-group">
								<input type="text" class=" form-control form-control-sm shadow" id="_addr" name='addr' ">
								<button class="btn btn-outline-secondary shadow" type="button" id="button-addon2" data-bs-toggle="tooltip" title="{{ 'Format Address' | trans }}">{{ icon_envelope | raw }}</button>
							</div>
						</div>

						<div class="col-6 mb-2">
							<label class="small" for="_addr">
								{{ 'Phone' | trans }}:
							</label>
							<input type="tel" class="form-control form-control-sm shadow" id="_addr" name='addr' ">
						</div>
						<div class="col-6 mb-2">
							<label class="small" for="_addr">
								{{ 'Fax' | trans }}:
							</label>
							<input type="tel" class="form-control form-control-sm shadow" id="_addr" name='addr' ">
						</div>
						<div class="col-6 mb-2">
							<label class="small" for="_addr">
								{{ 'Email' | trans }}:
							</label>
							<input type="text" class="form-control form-control-sm shadow" id="_addr" name='addr' ">
						</div>
						<div class="col-6 mb-2">
							<label class="small" for="_addr">
								{{ 'WWW' | trans }}:
							</label>
							<input type="url" class="form-control form-control-sm shadow" id="_addr" name='addr' ">
						</div>
					</div>

				</div>
				<div class="col-2">
					<button role="button" class="btn btn-outline-dark btn-light btn-sm shadow w-100 mb-2" data-action="click->editor#notes" data-bs-toggle="tooltip" data-bs-placement="bottom" title="{{ 'Notes' | trans }}">
						{{ icon_notes | raw }}
					</button>
					<button type="button" class="btn btn-outline-primary border-3 btn-light btn-sm shadow w-100 mb-2" _data-action="click->editor#sourceCitations" data-bs-toggle="tooltip" data-bs-placement="bottom" title="{{ 'Identifiers' | trans }}">
						{{ icon_sources | raw }}
					</button>

				</div</div>
				{# row #}
			</div>
			{# card-body #}


			<!--div class="card-footer d-flex justify-content-around">
																																										</div-->
		</div>
	</div>
	{# card #}
</div>
{# Container #}</form>{# Modal Body #}{% endset %}{{ include('editor/modal/_modalDialog.html.twig', {modalTitle: 'Repository Library', modalContent: content })}}
