{# editor/modal/repository1.html.twig #}


{% set content %}


        <div class="container-fluid">
          <div class="card alert-warning shadow">
            <div class="card-header">
              {{ 'Repositories' | trans }}
            </div>
          <div class="card-body">
          <div class="row">

            <div class="col-12">
              <div class="mb-2 sshadow">
                <label class= "small" for="idYYY0"> {{ 'Search term' | trans }}: </label>
                <input type="search"
                class="form-control form-control-sm shadow"
                id="idYYY0"
                name= 'npfx'
                value="" >
              </div>
            </div>

            <div class="col-12 form-text shadow">
              <div class="input-group input-group-sm mb-3">
                Results: (<strong>{{ project.repositoryRecords | length }}</strong>)
              </div>
            </div>


            <div class="col-12">
              <div class="mb-2 sshadow">
                <label class= "small" for="idYYY01"> {{ 'Source title' | trans }}: </label>
                <select type="text"
                  class="form-select form-select-sm shadow"
                  id="idYYY01"
                  name='npfx'
                  multiple
                  size=10 >

                  {% for repo in project.repositoryRecords.slice(0, 10)  %}
                    <option>{{ repo.name }}</option>
                  {% endfor %}

                </select>
              </div>
            </div>


            <div class="col-6">
              <div class="input-group input-group-sm mb-3">
                <button class="btn btn-sm btn-outline-secondary" type="button">{{ icon_left | raw}}</button>

                <span class="input-group-text" id="basic-addon1">Page</span>
                <input type="text" class="form-control form-control-sm" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
                <span class="input-group-text" id="basic-addon1">of</span>
                <span class="input-group-text" id="basic-addon1">245</span>
                <button class="btn btn-sm btn-outline-secondary" type="button" >{{ icon_right | raw}}</button>
              </div>
            </div>


          </div>  {# row #}
        </div>    {# card-body #}  
          <div class="card-footer d-flex justify-content-around">
            {# Knap apparat #}

            <!--div class="d-flex justify-content-around" -->
              
              <button type="button"
                class="btn btn-outline-dark btn-sm btn-light shadow"
                data-bs-toggle="tooltip"
                title="{{ 'References' | trans }}"
                ddata-action="editor#newIndividual"
                data-editor-myurl-param="{{ url('api_individual_new', {url: 'Project01'} ) }} ">
                 {{ icon_internet | raw }}
              </button>

              <button type="button"
                class="btn btn-outline-dark btn-sm btn-light shadow"
                data-bs-toggle="tooltip"
                title="{{ 'New' | trans }}"
                data-action="editor#newRepositoryRecord"
                data-editor-formurl-param="{{ url('newrepository', {url: project.url} ) }} ">
                 {{ icon_association | raw }}
              </button>
              
              <button type="button"
                class="btn btn-outline-dark btn-sm btn-light shadow"
                data-bs-toggle="tooltip"
                title="{{ 'Edit' | trans }}"
                ddata-action="editor#newIndividual"
                data-editor-myurl-param="{{ url('api_individual_new', {url: 'Project01'} ) }} ">
                 {{ icon_edit1 | raw }}
              </button>

              <button type="button"
                class="btn btn-outline-dark btn-sm btn-light shadow"
                data-bs-toggle="tooltip"
                title="{{ 'Delete' | trans }}"
                ddata-action="editor#newIndividual"
                data-editor-myurl-param="{{ url('api_individual_new', {url: 'Project01'} ) }} ">
                 {{ icon_delete | raw }}
              </button>
            <!--/div-->
            
          </div>
        </div> {# card #}
        </div>  {# Container #}
      </form> {# Modal Body #}

{% endset %}



{{ include('editor/modal/_modalDialog.html.twig', {modalTitle: 'Test', modalContent: content, modalSize: 'modal-xl' })}}



