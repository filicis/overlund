{# restrictions.html.twig #}

{#
    Restrictions

    Template Variables
    - resn
    - form
#}

{% set resn= 128 %}
{% set disabled= resn ? '' : 'disabled' %}


<fieldset class="form-group col text-end"
          {{ disabled }}
          data-action="change->editor#restrictions"
          data-editor-resn-param= {{ resn }}
          data-editor-form-param= "" >

  {{ form_widget(form.locked, {'label': icon_locked,
    'attr': {'class': 'btn-check'},
    'label_attr': {'class': 'btn btn-outline-dark btn-light btn-sm'}}) }}

  {{ form_widget(form.confidential, {'label': icon_confidential,
    'attr': {'class': 'btn-check'},
    'label_attr': {'class': 'btn btn-outline-dark btn-light btn-sm'}})}}

  {{ form_widget(form.privacy, {'label': icon_private, 
    'attr': {'class': 'btn-check'},
    'label_attr': {'class': 'btn btn-outline-dark btn-light btn-sm' }}) | raw }}


</fieldset>


