{# repository/library.html.twig #}


{% set content %}


<div class="container-fluid" data-controller="repositories">
	<div
		class="card alert-warning shadow">

		{# card Header #}

		<div class="card-header">
			{{ 'New Repository' | trans }}
		</div>

		{# Card Body #}

		<div class="card-body">
			<div class="row">
				<div class="col-10">

					<div
						class="row">

						{# Descriptiom - Kun defineret for Attributter med Payload #}

						<div class="col-12 mb-2" data-bs-toggle="tooltip" title="{{ 'Naime' | trans }}">
							<label class="small shadow" for="idName">
								{{ 'Name' | trans }}:
							</label>
							<input type="text" class="form-control form-control-sm shadow" id="idName" name='name' ">
						</div>


						<div class="col-12 mb-2" data-bs-toggle="tooltip" title="{{ 'Address' | trans }}">
							<label class="small shadow" for="_addr">{{ 'Address' | trans }}:</label>
							<div class="input-group">
								<input type="text" class="form-control form-control-sm shadow" id="_addr" name='addr' ">
								<div data-bs-toggle="tooltip" title="{{ 'Format Address' | trans }}">
									<button class="btn btn-sm btn-outline-primary shadow" type="button" id="button-addon2" data-bs-toggle="button" data-action="repositories#toggle">{{ icon_envelope | raw }}</button>
								</div>
							</div>
						</div>

						<fieldset class="d-none" data-repositories-target="address">
							<div class="col-12 mb-2">
								<label class="small shadow" for="_adr1">
									{{ 'Address Line 1' | trans }}:
								</label>
								<input type="text" class="form-control form-control-sm shadow" id="_adr1" name='adr1' ">
							</div>

							<div class="col-12 mb-2">
								<label class="small shadow" for="_adr2">
									{{ 'Address Line 2' | trans }}:
								</label>
								<input type="text" class="form-control form-control-sm shadow" id="_adr2" name='adr2' ">
							</div>

							<div class="col-12 mb-2">
								<label class="small shadow" for="_adr3">
									{{ 'Address Line 3' | trans }}:
								</label>
								<input type="text" class="form-control form-control-sm shadow" id="_adr3" name='adr3' ">
							</div>
							<div class="row">
								<div class="col-3 mb-2">
									<label class="small shadow" for="_adr3">
										{{ 'Post code' | trans }}:
									</label>
									<input type="text" class="form-control form-control-sm shadow" id="_adr3" name='adr3' ">
								</div>

								<div class="col-9 mb-2">
									<label class="small shadow" for="_adr3">
										{{ 'City' | trans }}:
									</label>
									<input type="text" class="form-control form-control-sm shadow" id="_adr3" name='adr3' ">
								</div>
							</div>
							<div class="row">
								<div class="col-6 mb-2">
									<label class="small shadow" for="_adr3">
										{{ 'State' | trans }}:
									</label>
									<input type="text" class="form-control form-control-sm shadow" id="_adr3" name='adr3' ">
								</div>

								<div class="col-6 mb-2">
									<label class="small shadow" for="_adr3">
										{{ 'Country' | trans }}:
									</label>
									<input type="text" class="form-control form-control-sm shadow" id="_adr3" name='adr3' ">
								</div>
							</row>
						</fieldset>

						<div class="col-6 mb-2">
							<label class="small" for="_phon">
								{{ 'Phone' | trans }}:
							</label>
							<input type="tel" class="form-control form-control-sm shadow" id="_phon" name='phon' ">
						</div>

						<div class="col-6 mb-2">
							<label class="small" for="_fax">
								{{ 'Fax' | trans }}:
							</label>
							<input type="tel" class="form-control form-control-sm shadow" id="_fax" name='fax' ">
						</div>

						<div class="col-6 mb-2">
							<label class="small" for="_email">
								{{ 'Email' | trans }}:
							</label>
							<input type="text" class="form-control form-control-sm shadow" id="_email" name='email' ">
						</div>

						<div class="col-6 mb-2">
							<label class="small" for="_www">
								{{ 'WWW' | trans }}:
							</label>
							<input type="url" class="form-control form-control-sm shadow" id="_www" name='www' ">
						</div>
					</div>

				</div>
				<div class="col-2">
					<button role="button" class="btn btn-outline-dark btn-light btn-sm shadow w-100 mb-2" data-action="click->editor#notes" data-bs-toggle="tooltip" data-bs-placement="bottom" title="{{ 'Notes' | trans }}">
						{{ icon_notes | raw }}
					</button>
					<button type="button" class="btn btn-outline-primary border-3 btn-light btn-sm shadow w-100 mb-2" _data-action="click->editor#sourceCitations" data-bs-toggle="tooltip" data-bs-placement="bottom" title="{{ 'Identifiers' | trans }}">
						{{ icon_sources | raw }}
					</button>

				</div</div>
				{# row #}
			</div>
			{# card-body #}


			<!--div class="card-footer d-flex justify-content-around">
																																																																																																																																																			</div-->
		</div>
	</div>
	{# card #}
</div>


{# Container #}</form>{# Modal Body #}{% endset %}{{ include('editor/modal/_modalDialog.html.twig', {modalTitle: 'Repository Library', modalContent: content })}}
